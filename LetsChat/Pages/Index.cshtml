@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Let's Chat!</h1>
</div>

<div class="container mt-lg-5">
    <div class="row">
        <div class="col-2">Your Name: </div>
        <div class="col-3"><input type="text" id="userInput" /></div>
        <div class="col-2">Pick a Room: </div>
        <div class="col-3">
            <select id="roomSelect">
                <option value="" selected>--Choose a Room--</option>
                <option value="roomA">Chat Room A</option>
                <option value="roomB">Chat Room B</option>
                <option value="roomC">Chat Room C</option>
            </select>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-2">Your Message: </div>
        <div class="col-10">
            <span>
                <input type="text" id="messageInput" size="60">
                <input class="ml-4" type="button" id="sendButton" value="Send">
            </span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-12">
        <ul id="messagesList"></ul>
    </div>
</div>
@section Scripts
{
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
}
